{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "ya-ya",
  "description": "An Extension.js example.",
  "icons": {
    "48": "images/extension_48.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "chromium:service_worker": "background.mjs",
    "firefox:scripts": ["background.mjs"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/scripts.mjs"]
    }
  ],
  "action": {
    "default_title": "ЯЯ",
    "default_popup": "./action/index.html"
  },
  "author": "a.nvlkv",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; style-src 'self' https://cdnjs.cloudflare.com/ajax/libs/animate.css/*"
  }
}
